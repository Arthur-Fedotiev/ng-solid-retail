{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:sr-retail",
                "onlyDependOnLibsWithTags": [
                  "scope:products",
                  "scope:shared",
                  "scope:layout"
                ]
              },
              {
                "sourceTag": "scope:products",
                "onlyDependOnLibsWithTags": ["scope:products", "scope:shared"]
              },
              {
                "sourceTag": "scope:layout",
                "onlyDependOnLibsWithTags": ["scope:layout", "scope:shared"]
              },

              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:infrastructure",
                  "type:util",
                  "type:ui",
                  "type:entities",
                  "type:shell"
                ]
              },
              {
                "sourceTag": "type:entities",
                "onlyDependOnLibsWithTags": ["type:entities", "type:util"]
              },
              {
                "sourceTag": "type:infrastructure",
                "onlyDependOnLibsWithTags": [
                  "type:infrastructure",
                  "type:entities",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:application",
                "onlyDependOnLibsWithTags": [
                  "type:application",
                  "type:infrastructure",
                  "type:entities",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:application",
                  "type:util",
                  "type:ui"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:application",
                  "type:infrastructure"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
