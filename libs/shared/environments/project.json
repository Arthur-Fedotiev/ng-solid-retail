{
  "projectType": "library",
  "sourceRoot": "libs/shared/environments/src",
  "prefix": "omnia",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/libs/shared/environments"
      ],
      "options": {
        "jestConfig": "libs/shared/environments/jest.config.ts",
        "passWithNoTests": true
      }
