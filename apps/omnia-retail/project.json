{
  "projectType": "application",
  "sourceRoot": "apps/omnia-retail/src",
  "prefix": "omnia",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/omnia-retail",
        "index": "apps/omnia-retail/src/index.html",
        "main": "apps/omnia-retail/src/main.ts",
        "polyfills": "apps/omnia-retail/src/polyfills.ts",
        "tsConfig": "apps/omnia-retail/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "favicon.ico",
            "input": "libs/shared/assets/src",
            "output": "./"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/assets/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "api",
            "output": "api"
          }
        ],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/shared/styles/src/lib",
            "libs/shared/styles/src/lib/mixins"
          ]
        },
        "styles": [
          "libs/shared/styles/src/index.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "libs/shared/environments/src/lib/environment.ts",
              "with": "libs/shared/environments/src/lib/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "omnia-retail:build:production"
        },
        "development": {
          "browserTarget": "omnia-retail:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "proxyConfig": "apps/omnia-retail/proxy.conf.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "omnia-retail:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/omnia-retail/**/*.ts",
          "apps/omnia-retail/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/omnia-retail"
      ],
      "options": {
        "jestConfig": "apps/omnia-retail/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@angular/fire:deploy",
      "options": {
        "prerender": false,
        "ssr": false,
        "browserTarget": "omnia-retail:build:production",
        "firebaseProject": "omnia-retail-6ad5b",
        "firebaseHostingSite": "omnia-retail-6ad5b"
      }
    }
  },
  "tags": [
    "scope:omnia-retail",
    "type:app"
  ],
  "implicitDependencies": [
    "shared-styles",
    "shared-assets"
  ]
}
